@using Microsoft.AspNetCore.Components.Routing
@using Journal.Services
@inject AuthService AuthService
@inject NavigationManager Navigation

<nav class="topbar">
    <div class="topbar-inner">
        <div class="brand" role="button" tabindex="0" @onclick="GoHome">
            Journal
        </div>

        <div class="links">
            <NavLink href="/" Match="NavLinkMatch.All" class="link">Home</NavLink>
            <NavLink href="/calendar" class="link">Calendar</NavLink>
        </div>

        <div class="right">
            <button class="btn-ui btn-ui-soft" type="button" @onclick="ThemeInfo">
                Change Theme
            </button>

            <button class="btn-ui btn-ui-danger" type="button" @onclick="Logout">
                Logout
            </button>
        </div>
    </div>
</nav>

<style>
    .topbar {
        background: var(--mint);
        border-bottom: 1px solid var(--border);
        position: sticky;
        top: 0;
        z-index: 100;
    }

    .topbar-inner {
        max-width: 1100px;
        margin: 0 auto;
        padding: 12px 16px;
        display: grid;
        grid-template-columns: 1fr auto 1fr;
        align-items: center;
        gap: 10px;
    }

    .brand {
        font-weight: 900;
        font-size: 22px;
        color: #0f172a;
        cursor: pointer;
        user-select: none;
    }

    .links {
        display: flex;
        gap: 18px;
        justify-content: center;
        flex-wrap: wrap;
    }

    .link {
        text-decoration: none;
        color: #0f172a;
        padding: 8px 10px;
        border-radius: 10px;
        font-weight: 700;
    }

        .link.active {
            background: rgba(255,255,255,0.7);
            border: 1px solid var(--border);
        }

    .right {
        display: flex;
        gap: 10px;
        justify-content: flex-end;
        flex-wrap: wrap;
    }

    @@media (max-width: 900px) {
        .topbar-inner {
            grid-template-columns: 1fr;
            justify-items: center;
        }

        .right {
            justify-content: center;
        }
    }
</style>

@code {
    private void GoHome()
    {
        Navigation.NavigateTo("/");
    }

    private async Task ThemeInfo()
    {
        await Application.Current?.MainPage?.DisplayAlert("Theme", "Theme toggle will be added later (light/dark).", "OK");
    }

    private void Logout()
    {
        AuthService.Logout();
        Navigation.NavigateTo("/login");
    }
}
