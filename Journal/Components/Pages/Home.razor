@page "/"
@using System
@using System.Linq
@using System.Collections.Generic
@using Microsoft.JSInterop
@using Journal.Models
@using Journal.Services
@inject JournalService JournalService
@inject NavigationManager Navigation
@inject IJSRuntime JS

<div class="container-page">
    <!-- Header / Day Navigation -->
    <div class="card-ui">
        <div class="card-head">
            <div class="d-flex align-items-center gap-2">
                <span class="badge-pill">@CurrentDate.ToString("D")</span>
            </div>

            <div class="d-flex align-items-center gap-2">
                <span class="badge-pill badge-streak">
                     üî• @Stats.CurrentStreak Day Streak
                </span>
            </div>
            @if (!HasDateQuery)
            {
                <div class="d-flex align-items-center gap-2 mt-2">
                    <input class="input-ui" style="min-width: 220px;" placeholder="Search title or content" @bind="SearchQuery" />
                    <button class="btn-ui" type="button" @onclick="ToggleFilters">Filters</button>
                    <button class="btn-ui btn-ui-primary" type="button" @onclick="ApplySearchAsync">Search</button>
                    <button class="btn-ui" type="button" @onclick="ResetFiltersAsync">Reset</button>
                </div>
                @if (ShowFilters)
                {
                    <div class="card-ui mt-2" style="max-width: 1000px;">
                        <div class="d-flex align-items-center gap-2 mb-2">
                            <input type="date" class="input-ui" @bind="FilterFrom" />
                            <input type="date" class="input-ui" @bind="FilterTo" />
                            <button class="btn-ui" type="button" @onclick="ToggleFilters">Close</button>
                        </div>
                        <div class="d-flex flex-wrap gap-2 mb-2">
                            @foreach (var mood in AvailableMoods)
                            {
                                var selected = FilterSelectedMoods.Contains(mood.Name);
                                <button type="button" class="btn-ui @(selected ? "btn-ui-soft" : "")" @onclick="() => ToggleFilterMood(mood.Name)">@mood.Emoji @mood.Name</button>
                            }
                        </div>
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var tag in AvailableTags)
                            {
                                var selected = FilterSelectedTags.Contains(tag);
                                <button type="button" class="btn-ui @(selected ? "btn-ui-soft" : "")" @onclick="() => ToggleFilterTag(tag)">@tag</button>
                            }
                        </div>
                    </div>
                }
            }
        </div>

        <div class="card-body">
            @if (IsLoading)
            {
                <div class="text-center py-4">
                    <p class="p-muted">Loading...</p>
                </div>
            }
            else if (CurrentEntry == null)
            {
                @if (HasDateQuery)
                {
                    <div class="text-center py-4">
                        <h3 class="h-title mb-2">No entry for this day</h3>
                        @if (!IsReadOnly)
                        {
                            <p class="p-muted mb-3">Start journaling to build your streak.</p>
                            <button class="btn-ui btn-ui-primary" type="button" @onclick="CreateEntry">Start Journaling</button>
                        }
                        else
                        {
                            <p class="p-muted mb-3">You cannot create entries for other dates.</p>
                        }
                    </div>
                }
                else
                {
                    <div class="py-3">
                        <h3 class="h-title mb-2">Your Journal Entry</h3>
                        @if (AllEntries.Count == 0)
                        {
                            <p class="p-muted mb-3">No entries yet.</p>
                            <button class="btn-ui btn-ui-primary" type="button" @onclick="() => GoToDate(DateTime.Today, true)">Start Today</button>
                        }
                        else
                        {
                            <div class="row-gap">
                                @if (TodaysEntry!=null)
                                {
                                    <div class="card-ui">
                                        <div class="card-head">
                                            <div class="d-flex align-items-center gap-2">
                                                <span class="badge-pill">@TodaysEntry.Date.ToString("D")</span>
                                                <span class="badge-pill">@($"{TodaysEntry.PrimaryMood?.Emoji} {TodaysEntry.PrimaryMood?.Name}")</span>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <h4 class="h-title m-0">@TodaysEntry.Title</h4>
                                            @if (TodaysEntry.SecondaryMoods?.Count > 0)
                                            {
                                                <div class="d-flex gap-2 flex-wrap mt-2">
                                                    @foreach (var sm in TodaysEntry.SecondaryMoods.Take(2))
                                                    {
                                                        <span class="badge-pill">@($"{sm.Emoji} {sm.Name}")</span>
                                                    }
                                                </div>
                                            }
                                            <div class="mt-3">
                                                
                                                    <button class="btn-ui btn-ui-primary" type="button" @onclick="() => GoToDate(TodaysEntry.Date)">Edit</button>
                                               
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="text-center py-4">
                                        <h3 class="h-title mb-2">No entry for this day</h3>
                                        
                                        
                                            <p class="p-muted mb-3">Start journaling to build your streak.</p>
                                            <button class="btn-ui btn-ui-primary" type="button" @onclick="CreateEntry">Start Journaling</button>
                                        
                                    </div>
                                }
                            </div>
                        }
                    </div>
                }
            }
            else
            {
                <!-- Main Entry Card -->
                <div class="row-gap">
                    <div class="card-ui">
                        <div class="card-head">
                            <div class="d-flex align-items-center gap-2">
                                <button type="button" class="btn-ui" @onclick="BackToHome">‚Üê Back</button>
                                <h3 class="h-title m-0">Today‚Äôs Entry</h3>
                            </div>

                            <span class="badge-pill">
                                @if (!string.IsNullOrWhiteSpace(SaveStatus))
                                {
                                    @SaveStatus
                                }
                                else
                                {
                                    <span class="p-muted">Not saved yet</span>
                                }
                            </span>
                        </div>


                        <div class="card-body">
                            <!-- Title -->
                            <div class="mb-3">
                                <label class="form-label fw-bold">Title</label>
                                <input type="text"
                                       class="input-ui"
                                       @bind="CurrentEntry.Title"
                                       placeholder="Give your day a title..." 
                                       disabled="@IsReadOnly" />
                            </div>

                            <!-- Moods (simplified UI but coursework compliant) -->
                            <div class="mb-3">
                                <label class="form-label fw-bold">Primary Mood</label>
                                <select class="input-ui" @bind="SelectedPrimaryMoodName" disabled="@IsReadOnly">
                                    <option value="">Select mood...</option>
                                    @foreach (var mood in AvailableMoods)
                                    {
                                        <option value="@mood.Name">@mood.Emoji @mood.Name</option>
                                    }
                                </select>

                                <div class="mt-2">
                                    <button type="button" class="btn-ui btn-ui-soft" @onclick="ToggleSecondaryPanel" disabled="@IsReadOnly">
                                        @(ShowSecondary ? "Hide secondary moods" : "Add secondary moods (optional)")
                                    </button>
                                </div>

                                @if (ShowSecondary)
                                {
                                    <div class="mt-2 d-flex gap-2 flex-wrap">
                                        @foreach (var mood in AvailableMoods)
                                        {
                                            var isSelected = IsSecondaryMoodSelected(mood);
                                            <button type="button"
                                                    class="btn-ui @(isSelected ? "btn-ui-soft" : "")"
                                                    @onclick="() => ToggleSecondaryMood(mood)"
                                                    disabled="@IsReadOnly">
                                                @mood.Emoji
                                            </button>
                                        }
                                    </div>
                                    <div class="p-muted mt-1" style="font-size: 13px;">
                                        Pick up to 2.
                                    </div>
                                }
                            </div>


                            <!-- Content (Quill) -->
                            <div class="mb-3">
                                <label class="form-label fw-bold">Content</label>

                                <div id="quillEditor" class="card-ui" style="height: 280px; background: white;"></div>

                                <div class="p-muted mt-2" style="font-size: 13px;">
                                    Formatting supported: headings, bold, italics, lists, links.
                                </div>
                            </div>

                            <!-- Tags -->
                            <div class="mb-3">
                                <label class="form-label fw-bold">Tags</label>
                                <div class="d-flex flex-wrap gap-2">
                                    @foreach (var tag in AvailableTags)
                                    {
                                        var isSelected = CurrentEntry.Tags.Contains(tag);

                                        <button type="button"
                                                class="btn-ui @(isSelected ? "btn-ui-soft" : "")"
                                                @onclick="() => ToggleTag(tag)"
                                                disabled="@IsReadOnly">
                                            @tag
                                        </button>
                                    }
                                </div>
                            </div>

                            <!-- Actions -->
                            <div class="d-flex justify-content-between align-items-center mt-4">
                                <button class="btn-ui btn-ui-danger" type="button" @onclick="DeleteEntry">
                                    Delete
                                </button>

                                @if (!IsReadOnly)
                                {
                                    <button class="btn-ui btn-ui-primary" type="button" @onclick="SaveEntry">
                                        Save Entry
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@if (AllEntries.Count > 0 && !HasDateQuery)
{
    <div class="mt-4">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <h3 class="h-title">Previous Entries</h3>
            <div class="d-flex align-items-center gap-2">
                <button class="btn-ui" type="button" @onclick="PrevPage" disabled="@(!CanPrev)">Prev</button>
                <span class="badge-pill">Page @(PageIndex + 1) / @TotalPages</span>
                <button class="btn-ui" type="button" @onclick="NextPage" disabled="@(!CanNext)">Next</button>
            </div>
        </div>
        <div class="row-gap">
            @foreach (var e in GetPagedEntries())
            {
                <div class="card-ui">
                    <div class="card-head">
                        <div class="d-flex align-items-center gap-2">
                            <span class="badge-pill">@e.Date.ToString("D")</span>
                            <span class="badge-pill">@($"{e.PrimaryMood?.Emoji} {e.PrimaryMood?.Name}")</span>
                        </div>
                    </div>
                    <div class="card-body">
                        <h4 class="h-title m-0">@e.Title</h4>
                        @if (e.SecondaryMoods?.Count > 0)
                        {
                            <div class="d-flex gap-2 flex-wrap mt-2">
                                @foreach (var sm in e.SecondaryMoods.Take(2))
                                {
                                    <span class="badge-pill">@($"{sm.Emoji} {sm.Name}")</span>
                                }
                            </div>
                        }
                        <div class="mt-3">
                            <button class="btn-ui btn-ui-soft" type="button" @onclick="() => GoToDate(e.Date)">View</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
@code {







    private DateTime CurrentDate = DateTime.Today;
    private JournalEntry? CurrentEntry;
    private JournalStats Stats = new();

    private List<Mood> AvailableMoods = new();
    private List<string> AvailableTags = new();

    private bool IsLoading = true;
    private string SaveStatus = "";

    private bool IsFutureDate => CurrentDate.Date >= DateTime.Today;
    private bool IsReadOnly => CurrentDate.Date != DateTime.Today;

    // Quill state
    private bool QuillReady = false;
    private string? PendingQuillHtml = null;

    // Secondary mood UI toggle
    private bool ShowSecondary = false;
    private bool HasDateQuery = false;
    private List<JournalEntry> AllEntries = new();
    private int PageSize = 5;
    private int PageIndex = 0;
    private string SearchQuery = "";
    private DateTime? FilterFrom = null;
    private DateTime? FilterTo = null;
    private List<string> FilterSelectedMoods = new();
    private List<string> FilterSelectedTags = new();
    private bool ShowFilters = false;

    private JournalEntry? TodaysEntry = null;

    private string SelectedPrimaryMoodName
    {
        get => CurrentEntry?.PrimaryMood?.Name ?? "";
        set
        {
            if (CurrentEntry != null)
            {
                var selected = AvailableMoods.FirstOrDefault(m => m.Name == value);
                CurrentEntry.PrimaryMood = selected;
            }
        }
    }

    protected override async Task OnInitializedAsync()
    {
        ParseDateFromQuery();
        ParseForceStartFromQuery();

        AvailableMoods = JournalService.GetAvailableMoods();
        AvailableTags = JournalService.GetAvailableTags();

        await LoadStatsAsync();
        await LoadAllEntriesAsync();
        if (HasDateQuery)
        {
            await LoadEntryAsync();
        }
        else
        {
            CurrentEntry = null;
            SaveStatus = "";
            IsLoading = false;
        }

        if (ForceStart)
        {
            CurrentEntry = null;   // show Start Journaling screen
            SaveStatus = "";
        }
    }

    protected override void OnInitialized()
    {
        Navigation.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, Microsoft.AspNetCore.Components.Routing.LocationChangedEventArgs e)
    {
        ParseDateFromQuery();
        ParseForceStartFromQuery();

        _ = InvokeAsync(async () =>
        {
            await LoadAllEntriesAsync();
            PageIndex = 0;
            if (HasDateQuery)
            {
                await LoadEntryAsync();
            }
            else
            {
                CurrentEntry = null;
                SaveStatus = "";
                IsLoading = false;
                StateHasChanged();
            }
        });
    }


    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (CurrentEntry == null) return;

        try
        {
            if (!QuillReady)
            {
                await JS.InvokeVoidAsync("initQuill", "quillEditor");
                QuillReady = true;
            }

            if (PendingQuillHtml != null)
            {
                await JS.InvokeVoidAsync("setQuillHtml", PendingQuillHtml);
                PendingQuillHtml = null;
            }

            await JS.InvokeVoidAsync("enableQuill", !IsReadOnly);
        }
        catch
        {
                
        }
    }


    private void ToggleSecondaryPanel()
    {
        ShowSecondary = !ShowSecondary;
    }
    private bool ForceStart = false;

    private void ParseForceStartFromQuery()
    {
        var uri = Navigation.ToAbsoluteUri(Navigation.Uri);
        var query = uri.Query;

        ForceStart = !string.IsNullOrWhiteSpace(query) && query.Contains("new=1");
    }

    private void ParseDateFromQuery()
    {
        var uri = Navigation.ToAbsoluteUri(Navigation.Uri);
        var query = uri.Query;

        HasDateQuery = !string.IsNullOrWhiteSpace(query) && query.Contains("date=");
        if (!HasDateQuery) return;

        try
        {
            var parts = query.Split(new[] { "date=" }, StringSplitOptions.None);
            if (parts.Length <= 1) return;

            var dateVal = parts[1].Split('&')[0];
            if (DateTime.TryParse(dateVal, out var parsedDate))
                CurrentDate = parsedDate.Date;
        }
        catch
        {
        }
    }

    private async Task LoadEntryAsync()
    {
        await JS.InvokeVoidAsync("destroyQuill", "quillEditor");
        QuillReady = false;
        PendingQuillHtml = null;

        IsLoading = true;
        StateHasChanged();

        SaveStatus = "";
        ShowSecondary = false;

        try
        {
            CurrentEntry = await JournalService.GetEntryByDateAsync(CurrentDate);
            PendingQuillHtml = CurrentEntry?.Content ?? "";
        }
        catch (Exception ex)
        {
            CurrentEntry = null;
            await Microsoft.Maui.Controls.Application.Current?.MainPage?.DisplayAlert("Error", ex.Message, "OK");
        }
        finally
        {
            IsLoading = false;
            StateHasChanged();
        }
    }

    private async Task LoadAllEntriesAsync()
    {
        try
        {
            var all = await JournalService.GetAllEntriesAsync();
            AllEntries = all.OrderByDescending(e => e.Date).ToList();
            TodaysEntry = AllEntries.Where(e => e.Date.Date == DateTime.Today).FirstOrDefault();
            PageIndex = 0;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading entries: {ex.Message}");
            AllEntries = new();
        }
    }

    private void GoToDate(DateTime date, bool forceStart = false)
    {
        var url = $"/?date={date:yyyy-MM-dd}";
        if (forceStart) url += "&new=1";
        Navigation.NavigateTo(url);
    }

    private IEnumerable<JournalEntry> GetPagedEntries()
    {
        return AllEntries.Skip(PageIndex * PageSize).Take(PageSize);
    }

    private int TotalPages => Math.Max(1, (int)Math.Ceiling(AllEntries.Count / (double)PageSize));
    private bool CanPrev => PageIndex > 0;
    private bool CanNext => PageIndex + 1 < TotalPages;
    private void PrevPage()
    {
        if (CanPrev) PageIndex--;
    }
    private void NextPage()
    {
        if (CanNext) PageIndex++;
    }
    private void ToggleFilters()
    {
        ShowFilters = !ShowFilters;
    }
    private void ToggleFilterMood(string name)
    {
        if (FilterSelectedMoods.Contains(name)) FilterSelectedMoods.Remove(name); else FilterSelectedMoods.Add(name);
    }
    private void ToggleFilterTag(string tag)
    {
        if (FilterSelectedTags.Contains(tag)) FilterSelectedTags.Remove(tag); else FilterSelectedTags.Add(tag);
    }
    private async Task ApplySearchAsync()
    {
        var results = await JournalService.SearchEntriesAsync(
            string.IsNullOrWhiteSpace(SearchQuery) ? null : SearchQuery,
            FilterFrom,
            FilterTo,
            FilterSelectedMoods,
            FilterSelectedTags
        );
        AllEntries = results.OrderByDescending(e => e.Date).ToList();
        PageIndex = 0;
    }
    private async Task ResetFiltersAsync()
    {
        SearchQuery = "";
        FilterFrom = null;
        FilterTo = null;
        FilterSelectedMoods.Clear();
        FilterSelectedTags.Clear();
        await LoadAllEntriesAsync();
    }
    private async Task PreviousDay()
    {
        CurrentDate = CurrentDate.AddDays(-1);
        await LoadEntryAsync();
    }

    private async Task NextDay()
    {
        if (!IsFutureDate)
        {
            CurrentDate = CurrentDate.AddDays(1);
            await LoadEntryAsync();
        }
    }

    private void CreateEntry()
    {
        CurrentEntry = new JournalEntry { Date = CurrentDate };
        SaveStatus = "";
        ShowSecondary = false;

        PendingQuillHtml = "";
        QuillReady = false; // IMPORTANT: allow initQuill on render
    }

    private async Task SaveEntry()
    {
        if (CurrentEntry == null) return;

        try
        {
            CurrentEntry.Content = await JS.InvokeAsync<string>("getQuillHtml");

            if (string.IsNullOrWhiteSpace(CurrentEntry.Title))
                CurrentEntry.Title = "Untitled";

            if (CurrentEntry.PrimaryMood == null)
            {
                await Microsoft.Maui.Controls.Application.Current?.MainPage?.DisplayAlert(
                    "Missing Mood",
                    "Please select a Primary Mood.",
                    "OK");
                return;
            }

            await JournalService.SaveEntryAsync(CurrentEntry);
            SaveStatus = "Saved at " + DateTime.Now.ToShortTimeString();
        }
        catch (Exception ex)
        {
            await Microsoft.Maui.Controls.Application.Current?.MainPage?.DisplayAlert("Save Failed", ex.Message, "OK");
        }
    }

    private async Task DeleteEntry()
    {
        var page = Microsoft.Maui.Controls.Application.Current?.MainPage;
        if (page == null) return;
        var confirmed = await page.DisplayAlert("Delete Entry", "Are you sure you want to delete this entry? This cannot be undone.", "Delete", "Cancel");
        if (!confirmed) return;
        await JS.InvokeVoidAsync("destroyQuill", "quillEditor");
        QuillReady = false;
        PendingQuillHtml = null;

        if (CurrentEntry == null) return;

        try
        {
            await JournalService.DeleteEntryByDateAsync(CurrentEntry.Date);
            CurrentEntry = null;
            SaveStatus = "";
            QuillReady = false;
            PendingQuillHtml = null;
        }
        catch (Exception ex)
        {
            await Microsoft.Maui.Controls.Application.Current?.MainPage?.DisplayAlert("Delete Failed", ex.Message, "OK");
        }
    }

    private bool IsSecondaryMoodSelected(Mood mood)
    {
        return CurrentEntry?.SecondaryMoods.Any(m => m.Name == mood.Name) ?? false;
    }

    private void ToggleSecondaryMood(Mood mood)
    {
        if (CurrentEntry == null) return;

        // Prevent selecting same mood as primary
        if (CurrentEntry.PrimaryMood?.Name == mood.Name) return;

        var existing = CurrentEntry.SecondaryMoods.FirstOrDefault(m => m.Name == mood.Name);
        if (existing != null)
        {
            CurrentEntry.SecondaryMoods.Remove(existing);
        }
        else
        {
            if (CurrentEntry.SecondaryMoods.Count < 2)
                CurrentEntry.SecondaryMoods.Add(mood);
        }
    }

    private void ToggleTag(string tag)
    {
        if (CurrentEntry == null) return;

        if (CurrentEntry.Tags.Contains(tag))
            CurrentEntry.Tags.Remove(tag);
        else
            CurrentEntry.Tags.Add(tag);
    }

    private async Task BackToHome()
    {
        await JS.InvokeVoidAsync("destroyQuill", "quillEditor");
        CurrentEntry = null;
        SaveStatus = "";
        QuillReady = false;
        PendingQuillHtml = null;

        ShowSecondary = false;
    }

    private async Task LoadStatsAsync()
    {
        try
        {
            Stats = await JournalService.GetStatsAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading stats: {ex.Message}");
        }
    }

    public void Dispose()
    {
        Navigation.LocationChanged -= OnLocationChanged;
    }
}
